{
    "name": "nqxcode/search-engine",
    "description": "Search engine for ORM based on Zend Lucene.",
    "keywords": ["lucene", "search", "orm"],
    "license": "MIT",
    "authors": [
        {
            "name": "Andrey Pokoev",
            "email": "nc101ux@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "repositories": [
        {
            "url": "https://github.com/nqxcode/ZendSearch.git",
            "type": "git"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "zendframework/zend-stdlib": "2.*",
        "zendframework/zendsearch": "dev-master",
        "nqxcode/phpmorphy": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*"
    },
    "autoload": {
        "psr-0": {
            "SearchEngine": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
